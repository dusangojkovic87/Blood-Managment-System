@model X.PagedList.IPagedList<DonateBlood.Models.BloodRequestShowModel>
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common

<div class="container-fluid">
    <div class="row mt-4">
        <div class="col-12 d-flex align-items-center d-flex flex-column">
            @if(Model.Count() > 0){
            @foreach (var request in Model)
            {
                <partial name="_BloodRequest" model="request" />
            }

            }else{
                <h1 class="text-center font-monserrat font-size-2rem font-weight-bold">No posts!</h1>
            }

        </div>
    </div>
</div>
<div class="container-fluid d-flex justify-content-center">
    @if (Model.Count() > 0)
    {
        <ul class="pagination">
            <li class="page-item p-4">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
            new PagedListRenderOptions{
            LiElementClasses = new string[] { "page-item" },
            PageClasses = new string[] { "page-link pagination__link" }

            });
            </li>
        </ul>

    }
</div>

@section Scripts{
    <script src="~/js/bloodrequest.js"></script>
}
